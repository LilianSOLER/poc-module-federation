    "lib1": {
      "projectType": "library",
      "root": "projects/lib1",
      "sourceRoot": "projects/lib1/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/lib1/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/lib1/tsconfig.lib.prod.json"
            },
            "development": {
